@model IEnumerable<BattleBands.Models.ApplicationEvent>
@{
    ViewData["Title"] = "My events";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-8">
        <section>
            <table class="table">
                @foreach (var evnt in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="EventPage" asp-route-id="@evnt.EventId">@evnt.EventName</a><br />
                            <b>Place - @evnt.EventPlace</b><br />
                            <b>Date and time - @evnt.EventTime</b><br />
                            <a asp-controller="Event" asp-action="UpdateEvent" asp-route-id="@evnt.EventId" class="btn btn-default">Edit</a>
                            <a asp-controller="Event" asp-action="DeleteEvent" asp-route-id="@evnt.EventId" class="btn btn-default">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </section>
    </div>
</div>