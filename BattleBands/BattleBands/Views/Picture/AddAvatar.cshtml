@model BattleBands.Models.ViewModels.PictureViewModels.AddPictureViewModel

<h3>Choose picture for avatar to upload</h3>
<form asp-action="AddAvatar" asp-controller="Picture" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.ID" />
    <input type="file" asp-for="@Model.Photo" /><br>
    <input type="submit" value="Upload" />
</form>