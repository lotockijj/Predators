@{
    ViewData["Title"] = "New Artist";
}
@model BattleBands.Models.ApplicationModels.ApplicationPerformer
<!DOCTYPE html>
<html>
<head>
    <environment names="Development">
        <link rel="stylesheet" href="~/css/NewArtist/NewArtist.css" />
    </environment>
</head>

<body>
    <div class="container">
        <div class="col-md-6">
            <form class="registration" asp-action="CreatePerformer" method="post" id="frm">
                <p>
                    <label for="PerformerName">Performer name:</label><br />
                    <input type="text" asp-for="PerformerName" placeholder="Name" size="30" required>
                </p>
                <p>
                    <label for="PerformerGenre">Style/Genre:</label><br />
                    <input type="text" asp-for="PerformerGenre" placeholder="Classic" size="30" required>
                </p>
                <p>
                    <label for="PerformerCountry">Country:</label><br />
                    <input type="text" asp-for="PerformerCountry" placeholder="Ukraine" size="30" required>
                </p>
                <p>
                    <label for="PerformerPhone">Phone:</label><br />
                    <input type="text" asp-for="PerformerPhone" placeholder="0936912791" size="30" required>
                </p>
                <p>
                    <label for="PerformerEmail">Email:</label><br />
                    <input type="email" asp-for="PerformerEmail" placeholder="example@gmail.com" size="30" required>
                </p>
                @*<p>
                        <b>Logo:</b><br>
                    <p>
                        <b>Load your Artist image or logo of the band:</b><br>
    >>>>>>> ddcc0f8d80ec5c4e130044b956818ddc2d044bc1
                        <input type="file" id="imageFile" accept="image/*">
                    </p>
                    <p>
                        <br />
                        <b>Загрузити аудіофайл виконавця:</b><br>
                        <input type="file" id="audioFile" accept="audio/*">
                    </p>
                    <p>
                        <br />
                        <b>Загрузити відеофайл виконавця:</b><br>
                        <input type="file" id="videoFile" accept="video/*">
                    </p>*@

                <p>
                    <label for="PerformerDescription">Description:</label><br />
                    <textarea asp-for="PerformerDescription" cols="50" rows="5"></textarea>
                </p>
                <p>
                    <input type="submit" class="button" value="Send" width="200">
                    <input type="reset" class="button" value="Clear">
                </p>
            </form>
        </div>
        <div class="col-md-6">
            <div class="band">
                <img src="~/images/NewArtist/BandClipart.png" />
            </div>
        </div>
    </div>
</body>
</html>