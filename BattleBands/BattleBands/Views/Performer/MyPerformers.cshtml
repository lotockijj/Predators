@model IEnumerable<BattleBands.Models.ApplicationPerformer>

@{
    ViewBag.Title = "My performers";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-8">
        <section>
            <table class="table">
                @foreach (var perf in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="ProfilePerformer" asp-route-id="@perf.PerformerId">@perf.PerformerName</a><br />
                            <b>Email - @perf.PerformerEmail</b><br />
                            <b>Phone - @perf.PerformerPhone</b><br />
                            <a asp-controller="Performer" asp-action="UpdatePerformer" asp-route-id="@perf.PerformerId" class="btn btn-default">Edit</a>
                            <a asp-controller="Performer" asp-action="ConfirmPerformerDelete" asp-route-id="@perf.PerformerId" class="btn btn-default">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </section>
    </div>
</div>