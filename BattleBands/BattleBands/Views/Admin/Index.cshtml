@{
}
@model IEnumerable<BattleBands.Models.ApplicationUser>
@{
    ViewBag.Title = "List of users";
}
<a asp-action="UserRoles" class="btn btn-sm">Роли пользователей</a>


<a asp-action="Roles" class="btn btn-sm">Роли</a>


<a asp-action="CreateUser" class="btn btn-sm">Добавить пользователя</a>

<table class="table">
    <tr><th>Email</th><th>Год</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Изменить</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>