@model IEnumerable<BattleBands.Models.ApplicationModels.ApplicationUser>
@{
    ViewBag.Title = "List of users";
}
<a asp-action="UserRoles" class="btn btn-sm">User's roles</a>


<a asp-action="Roles" class="btn btn-sm">All roles</a>


<a asp-action="CreateUser" class="btn btn-sm">Add user</a>

<table class="table">
    <tr><th>Email</th><th></th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Edit user</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>