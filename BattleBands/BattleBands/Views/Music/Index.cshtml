@model IEnumerable<BattleBands.Models.ApplicationModels.ApplicationMusic>
@{
    ViewData["Title"] = "Music";
}
<!DOCTYPE html>
<html>
<head>
    <environment names="Development">
        <link rel="stylesheet" href="~/css/Media/Music.css" />
    </environment>
</head>
<body>
    <div class="row">
        <h4>The latest and coolest music is only with us!</h4>
        <div id="header">
            <form id="new_search" method="get" action="http://www.google.com">
                <!--action потрібно поміняти-->
                <input type="text" id="tfq" class="text_input" size="40" maxlength="100" value="Alice in Chains Nutshell">
                <input type="submit" value="Find" class="search_btn">
            </form>
            <div class="clear"></div>
        </div>
        
        @foreach (var item in Model)
        {
            <p>@item.Name</p>
            <audio controls>
                <source src="@item.Path" type="audio/mp3">
                Your browser does not support the audio element.
            </audio>
        }
    </div>
</body>
</html>